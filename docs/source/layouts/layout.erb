<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Scooter<%= " - " + current_page.data.title %></title>

    <%= stylesheet_link_tag "demo" %>
    <%= stylesheet_link_tag "style" %>
    <%= stylesheet_link_tag "vendor/syntax" %>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body class="<%= page_classes %> sc-site">
    <header class="sc-site__header">

      <div class="sc-u-l-wrap">
        <a href="index.html" title="Scooter Home" class="sc-site__title">
          <img src="assets/images/scooter-logo.svg" alt="Scooter logo" />
        </a>
      </div>

    </header>

    <nav class="sc-site__nav">
      <div class="sc-u-l-wrap">
        <ul class="sc-o-nav sc-o-nav--inline">
          <li><%= link_to 'Home', 'index.html', nav_active('index.html') %></li>
          <li><%= link_to 'Variables', 'variables.html', nav_active('variables.html') %></li>
          <li><%= link_to 'Functions', 'functions.html', nav_active('functions.html') %></li>
          <li><%= link_to 'Mixins', 'mixins.html', nav_active('mixins.html') %></li>
          <li><%= link_to 'Base styles', 'base.html', nav_active('base.html') %></li>
          <li><%= link_to 'Objects', 'objects.html', nav_active('objects.html') %></li>
          <li><%= link_to 'Components', 'components.html', nav_active('components.html') %></li>
          <li><%= link_to 'Utilities', 'utilities.html', nav_active('utilities.html') %></li>
        </ul>
      </div>
    </nav>

    <main class="sc-site__content">
      <div class="sc-u-l-wrap">
        <div class="sc-o-grid">

          <div class="sc-o-grid__col sc-o-grid__col--9-of-12">
            <header class="sc-content__header">
              <h1><%= current_page.data.title %></h1>
              <% if current_page.data.gh_path %>
                <%= gh_link(current_page.data.gh_path) %>
              <% end %>
            </header>
            <%= yield %>
          </div>

          <div class="sc-o-grid__col sc-o-grid__col--3-of-12">
            <% if current_page.data.toc %>
              <h4>On this page</h4>
              <nav class="sc-content__nav sc-o-nav">
                <ul>
                  <% current_page.data.toc.length.times do | i | %>
                    <li><a href="#<%= current_page.data.toc[i].downcase %>"><%= current_page.data.toc[i] %></a></li>
                  <% end %>
                </ul>
              </nav>
            <% end %>
          </div>
        </div>
      </div>
    </main>
    <footer class="sc-site__footer">
      <div class="sc-u-l-wrap">
        <a href="https://github.com/dropbox/scooter">View on GitHub</a>.
      </div>
    </footer>

    <%= javascript_include_tag('all') %>
  </body>
</html>
